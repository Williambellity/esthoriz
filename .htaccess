# Config OVH
SetEnv PHP_VER 5
SetEnv REGISTER_GLOBALS 0

# Activation du module rewriting
RewriteEngine on

# Rules
RewriteCond %{HTTP_HOST} ^est-horizon.com$
RewriteRule ^(.*) https://www.est-horizon.com/$1 [QSA,L,R=301]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^[a-z]+(.*)?$ index.php [L]

# Erreurs
#ErrorDocument 500 /Error/500 # Internal Server Error
